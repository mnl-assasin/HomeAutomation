<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SwitchActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/switch01"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/switch02"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/switch03"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/switch04"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/switch05"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/switch06"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/switch07"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/switch08"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/switch09"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/switch10"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/switch11"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/switch12"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/switch13"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/switch14"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/switch15"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/switch16"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_weight="1" />
    </LinearLayout>


    <TextView
        android:id="@+id/switchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="22dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>
